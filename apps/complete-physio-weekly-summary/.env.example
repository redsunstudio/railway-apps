# Complete Physio Weekly Summary Configuration
# Copy this file to .env and fill in your values

# ============================================
# CONTENT SOURCES
# ============================================

# Instagram username (without @)
INSTAGRAM_USERNAME=completephysio

# YouTube RSS Feed URL
YOUTUBE_RSS_URL=https://www.youtube.com/feeds/videos.xml?channel_id=UCzqxBIw58_WDqxYWWwq_L8Q

# Blog RSS Feed URL (Complete Physio blog - includes new AND updated posts)
BLOG_RSS_URL=https://complete-physio.co.uk/feed/

# Second Blog RSS Feed URL (Ultrasound Injections blog - includes new AND updated posts)
BLOG2_RSS_URL=https://www.ultrasound-guided-injections.co.uk/feed/

# Newsletter RSS Feed URL
NEWSLETTER_RSS_URL=https://zapier.com/engine/rss/5614589/completenewsletter

# ============================================
# EMAIL CONFIGURATION
# ============================================

# Sender email address (your Gmail address)
SENDER_EMAIL=your-email@gmail.com

# Recipient email addresses (comma-separated for multiple recipients)
RECIPIENT_EMAILS=client1@example.com,client2@example.com,client3@example.com

# ============================================
# GMAIL API CREDENTIALS
# ============================================
# Get these by following the setup guide in SETUP.md

# Gmail API credentials (JSON format - paste the entire credentials.json content as a single line)
GMAIL_CREDENTIALS_JSON={"installed":{"client_id":"your-client-id","project_id":"your-project","auth_uri":"https://accounts.google.com/o/oauth2/auth","token_uri":"https://oauth2.googleapis.com/token","auth_provider_x509_cert_url":"https://www.googleapis.com/oauth2/v1/certs","client_secret":"your-client-secret","redirect_uris":["http://localhost"]}}

# Gmail API token (JSON format - paste the entire token.json content as a single line)
GMAIL_TOKEN_JSON={"token":"your-token","refresh_token":"your-refresh-token","token_uri":"https://oauth2.googleapis.com/token","client_id":"your-client-id","client_secret":"your-client-secret","scopes":["https://www.googleapis.com/auth/gmail.send"],"expiry":"2024-01-01T00:00:00.000000Z"}

# ============================================
# APP CONFIGURATION
# ============================================

# Set to 'true' to run once immediately (for testing)
# Set to 'false' for production (runs on schedule)
TEST_MODE=false
